    <style name="AddNewExpense" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/light_red</item>
    </style>

    <style name="CancelButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/red</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem" >
        <item name="android:gravity">center</item>
    </style>

    <style name="DeptSpinner" parent="android:Widget.DeviceDefault.Spinner">
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="MainActivityTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MainActionBarTheme</item>
    </style>

    <style name="MainActionBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/orange</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem"></style>


