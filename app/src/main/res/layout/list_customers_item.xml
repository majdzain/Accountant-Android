<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/customers_linear"
        android:background="@drawable/list_customers_item_selector"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8.5"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal"
                android:paddingTop="2dp"
                android:weightSum="10">

                <TextView
                    android:id="@+id/customerName"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="left"
                    android:paddingStart="5dp"
                    android:text="Name"
                    android:textColor="@color/spec_black"
                    android:singleLine="true"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/customerDate"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:gravity="right"
                    android:paddingEnd="5dp"
                    android:text="Date"
                    android:textColor="@color/spec_black"
                    android:singleLine="true"
                    android:textSize="19sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:weightSum="10">

                <TextView
                    android:id="@+id/customerNumber"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6.5"
                    android:gravity="left"
                    android:paddingStart="5dp"
                    android:text="Number"
                    android:singleLine="true"
                    android:textColor="@color/spec_black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/customerAccount"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:gravity="right"
                    android:paddingEnd="5dp"
                    android:text="Account"
                    android:singleLine="true"
                    android:textColor="@color/spec_black"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</FrameLayout>