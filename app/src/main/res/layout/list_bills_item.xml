<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="beforeDescendants"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="1dp"
    android:weightSum="10">

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/billCheckP"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="17dp"
        android:layout_weight="8.5"
        android:enabled="false"
        android:focusable="false"
        android:paddingBottom="19dp"
        android:paddingTop="19dp"
        android:visibility="gone"
        app:buttonTint="@color/blue" />
    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/billCheckS"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="17dp"
        android:layout_weight="8.5"
        android:enabled="false"
        android:focusable="false"
        android:paddingBottom="19dp"
        android:paddingTop="19dp"
        android:visibility="gone"
        app:buttonTint="@color/purple" />
    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/billCheckT"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="17dp"
        android:layout_weight="8.5"
        android:enabled="false"
        android:focusable="false"
        android:paddingBottom="19dp"
        android:paddingTop="19dp"
        android:visibility="gone"
        app:buttonTint="@color/green" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bills_linear"
        android:background="@drawable/list_purchases_item_selector"
        android:orientation="vertical"
        android:layout_weight="1.5"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8.5"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal"
                android:paddingTop="2dp"
                android:weightSum="10">

                <TextView
                    android:id="@+id/billName"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:gravity="left"
                    android:paddingStart="5dp"
                    android:singleLine="true"
                    android:text="Name"
                    android:textColor="@color/spec_black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/billDate"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6.5"
                    android:gravity="right"
                    android:paddingEnd="5dp"
                    android:singleLine="true"
                    android:text="Date"
                    android:textColor="@color/spec_black"
                    android:textSize="19sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:weightSum="10">

                <TextView
                    android:id="@+id/billFinal"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6.5"
                    android:gravity="left"
                    android:paddingStart="5dp"
                    android:singleLine="true"
                    android:text="Final"
                    android:textColor="@color/spec_black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/billSupCus"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:gravity="right"
                    android:paddingEnd="5dp"
                    android:singleLine="true"
                    android:text="SupCus"
                    android:textColor="@color/spec_black"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>