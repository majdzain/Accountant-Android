<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListBondsActivity">

    <ExpandableListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/bondsList"
        android:divider="@color/darker_red"
        android:dividerHeight="1dp"
        android:childDivider="@android:color/transparent"
        android:groupIndicator="@android:color/transparent" />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/floatingActionMenuB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        app:menu_backgroundColor="@android:color/transparent"
        app:menu_colorNormal="@color/darker_red"
        app:menu_colorPressed="@color/darker_red"
        app:menu_fab_label=""
        app:menu_openDirection="up"
        app:menu_showShadow="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floatingActionPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/darker_orange"
            app:fab_colorPressed="@color/darker_orange"
            app:fab_label="@string/fab_payment"
            app:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floatingActionTaken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/darker_blue"
            app:fab_colorPressed="@color/darker_blue"
            app:fab_label="@string/fab_taken"
            app:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floatingActionJournal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/darker_green"
            app:fab_colorPressed="@color/darker_green"
            app:fab_label="@string/fab_journal"
            app:fab_size="mini" />

    </com.github.clans.fab.FloatingActionMenu>
</RelativeLayout>