<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_group_subjects_ite"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#E8F5F3"
    android:orientation="horizontal"
>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/groupSubjectCheck"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:enabled="false"
        android:focusable="false"
        android:paddingBottom="19dp"
        android:paddingTop="19dp"
        android:visibility="gone"
        app:buttonTint="@color/orange" />

    <ImageView
        android:id="@+id/groupSubjectsIndicator"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        app:srcCompat="@drawable/expander_group" />

    <TextView
        android:id="@+id/listSubjectItemTitle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="fill_horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:text="Header"
        android:textColor="@color/spec_black"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>